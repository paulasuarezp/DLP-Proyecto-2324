		deftuple Punto as
			x : INTEGER;
			y : INTEGER;
		end
	vars
		b : INTEGER;

create
	inicio;
	
feature
	f (b : DOUBLE) is
	do
		b := 5; /* Error, b es una variable DOUBLE
	end

